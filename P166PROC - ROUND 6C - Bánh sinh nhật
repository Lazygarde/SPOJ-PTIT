#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n;
	long long ss = 0;
	cin >> n;
	char a[n][n];
	for (int i = 0; i < n; i++)
		for (int j = 0; j < n; j++)
			cin >> a[i][j];
	for (int i = 0; i < n; i++)
	{
		int s = 0;
		for (int j = 0; j < n; j++)
		{
			if (a[i][j] == 'C')
				s++;
		}
		if (s > 0)
			ss += s * (s - 1) / 2;
	}
	for (int j = 0; j < n; j++)
	{
		int s = 0;
		for (int i = 0; i < n; i++)
		{
			if (a[i][j] == 'C')
				s++;
		}
		if (s > 0)
			ss += s * (s - 1) / 2;
	}
	cout << ss;
}
