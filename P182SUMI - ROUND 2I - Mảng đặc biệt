#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n;
	cin >> n;
	n *= 2;
	int a[n], b[n], c[n], s1 = 0, s2 = 0;
	for (int i = 0; i < n; i++)
	{
		cin >> a[i];
		if (i % 2 == 0)
		{
			b[i] = 1;
			c[i] = 0;
		}
		else
		{
			b[i] = 0;
			c[i] = 1;
		}
	}
	for (int i = 0; i < n; i++)
	{
		if (b[i] != a[i])
			s1++;
		if (c[i] != a[i])
			s2++;
	}
	if (s1 > s2)
		cout << s2 / 2;
	else
		cout << s1 / 2;
}
