#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long n, k, a = 1;
	cin >> n >> k;
	for (int i = 0; i < k; i++)
		a *= 10;
	long long b = __gcd(a, n);
	long long c = (n / b) * a;
	cout << c;
}
