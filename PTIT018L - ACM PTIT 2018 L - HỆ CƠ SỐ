#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int t;
    cin >> t;
    while (t--)
    {
        long long b, n, k, ans = 0;
        cin >> b >> n;
        while (n > 0)
        {
            k = n % b;
            ans += k * k;
            n /= b;
        }
        cout << ans << endl;
    }
}
