#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long x, y, m, s = 0;
	cin >> x >> y >> m;
	if (x < y)
		swap(x, y);
	if (x >= m)
	{
		cout << 0;
		return 0;
	}
	if (x <= 0 && y <= 0)
	{
		cout << -1;
		return 0;
	}
	if (y < 0)
	{
		s = (0 - y) / x;
		y += x * s;
	}
	while (x < m)
	{
		long long k = x + y;
		y = x;
		x = k;
		s++;
	}
	cout << s;
}
