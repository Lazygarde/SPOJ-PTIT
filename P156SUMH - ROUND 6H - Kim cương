#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n;
	cin >> n;
	int k1 = (n - 1) / 2, k2 = 1;
	vector<string> a((n + 1) / 2);
	for (int i = 0; i < (n + 1) / 2; i++)
	{
		a[i].insert(a[i].size(), k1, '*');
		a[i].insert(a[i].size(), k2, 'D');
		a[i].insert(a[i].size(), k1, '*');
		k1 -= 1;
		k2 += 2;
	}
	for (int i = (n - 1) / 2 - 1; i >= 0; i--)
		a.push_back(a[i]);
	for (int i = 0; i < n; i++)
		cout << a[i] << endl;
}
