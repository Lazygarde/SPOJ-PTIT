#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, maxx = 0;
	cin >> n;
	int a[n][2];
	for (int i = 0; i < n; i++)
		cin >> a[i][0] >> a[i][1];
	for (int i = 0; i < n; i++)
	{
		if (a[i][0] + a[i][1] > maxx)
			maxx = a[i][0] + a[i][1];
	}
	cout << maxx;
}
