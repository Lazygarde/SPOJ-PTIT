#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int t;
	cin >> t;
	while (t--)
	{
		int n, s = 0;
		cin >> n;
		int k = sqrt(n);
		for (int i = 1; i <= k; i++)
		{
			if (n % i == 0)
			{
				if (i % 2 == 0)
					s++;
				if ((n / i) % 2 == 0)
					s++;
			}
		}
		if (k * k == n && k % 2 == 0)
			s--;
		cout << s << endl;
	}
}
