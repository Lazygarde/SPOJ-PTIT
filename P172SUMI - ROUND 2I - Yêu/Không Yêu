#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n;
	cin >> n;
	long long a[n], maxx = 0, s = 0;
	vector<long long> b, c;
	for (int i = 0; i < n; i++)
	{
		cin >> a[i];
		if (a[i] % 2 == 0)
			c.push_back(a[i]);
		else
			b.push_back(a[i]);
	}
	sort(b.begin(), b.end());
	sort(c.begin(), c.end());
	if (b.size() == 0)
		cout << "0";
	else if (b.size() % 2 == 0)
	{
		long long s = 0;
		for (int i = 1; i < b.size(); i++)
			s += b[i];
		for (int i = 0; i < c.size(); i++)
			s += c[i];
		cout << s;
	}
	else
	{
		long long s = 0;
		for (int i = 0; i < b.size(); i++)
			s += b[i];
		for (int i = 0; i < c.size(); i++)
			s += c[i];
		cout << s;
	}
}
