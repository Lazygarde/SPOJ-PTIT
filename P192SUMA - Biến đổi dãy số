#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long n, m, s = 0;
	cin >> n >> m;
	long long a[n];
	for (int i = 0; i < n; i++)
		cin >> a[i];
	for (int i = 1; i < n; i++)
	{
		if (a[i] <= a[i - 1])
		{
			long long k = a[i - 1] - a[i];
			k /= m;
			k++;
			a[i] += k * m;
			s += k;
		}
	}
	cout << s;
}
