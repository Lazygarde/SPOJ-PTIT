#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int t;
	cin >> t;
	while (t--)
	{
		long long a, b, c, s, m;
		cin >> a >> b >> c;
		s = sqrt(a * b * c);
		m = (s / a + s / b + s / c) * 4;
		cout << m << "\n";
	}
}
