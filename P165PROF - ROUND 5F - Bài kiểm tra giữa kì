#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, ans = 0;
	cin >> n;
	int a[n];
	bool b[1000005] = {};
	for (int i = 0; i < n; i++)
	{
		cin >> a[i];
		b[a[i]] = 1;
	}
	for (int i = 1000000; i > ans; i--)
	{
		if (b[i])
		{
			for (int j = i - ans - 1; j > ans; j--)
			{
				if (b[j])
				{
					if (i % j > ans)
						ans = i % j;
				}
			}
		}
	}
	cout<<ans;
}
