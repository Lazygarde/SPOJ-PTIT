#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, s = 1;
	cin >> n;
	long long a[n];
	for (int i = 0; i < n; i++)
		cin >> a[i];
	sort(a, a + n);
	long long x = a[0];
	for (int i = 1; i < n; i++)
	{
		if (a[i] >= x)
		{
			s++;
			x += a[i];
		}
	}
	cout << s;
}
