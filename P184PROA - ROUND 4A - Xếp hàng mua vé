#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, a, b, s = 0;
	cin >> n >> a >> b;
	for (int i = 1; i <= n; i++)
		if (i - 1 >= a && (n - i) <= b)
			s++;
	cout << s;
}
