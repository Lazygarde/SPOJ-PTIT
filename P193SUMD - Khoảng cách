#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	string a, b;
	cin >> a >> b;
	string s = a.substr(0, b.size());
	s = 'a' + s;
	s.erase(b.size(), 1);
	int ss = 0;
	for (int i = 0; i < a.size() - b.size() + 1; i++)
	{
		s.push_back(a[i + b.size() - 1]);
		s.erase(0, 1);
		int k = 0;
		for (int j = 0; j < b.size(); j++)
		{
			if (s[j] != b[j])
				k++;
		}
		if (k % 2 == 0)
			ss++;
	}
	cout << ss;
}
