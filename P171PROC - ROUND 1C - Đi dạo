#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, l;
	cin >> n >> l;
	double a[n];
	for (int i = 0; i < n; i++)
		cin >> a[i];
	sort(a, a + n);
	if (n == 1)
		cout << setprecision(10) << fixed << max(a[0], l - a[0]);
	else
	{
		int i = 0;
		double maxx = 0;
		while (i < n - 1)
		{
			if (a[i + 1] - a[i] > maxx)
				maxx = a[i + 1] - a[i];
			i++;
		}
		cout << setprecision(10) << fixed << max(max(maxx / 2, a[0]), l - a[n - 1]);
	}
}
