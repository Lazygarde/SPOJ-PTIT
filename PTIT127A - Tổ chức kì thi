#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int m, n, k, s = 0;
    cin >> m >> n >> k;
    for (int i = 0; i <= k; i++)
    {
        int j = k - i;
        m -= i;
        n -= j;
        if (m / 2 <= n && m / 2 > s)
            s = m / 2;
        else if (m / 2 >= n && n > s)
            s = n;
        m += i;
        n += j;
    }
    cout << s;
}
