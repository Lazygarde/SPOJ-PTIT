#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int t;
    cin >> t;
    while (t--)
    {
        int n, s = 0;
        cin >> n;
        stack<int> b, c;
        int a[n], l[n], r[n];
        for (int i = 0; i < n; i++)
            cin >> a[i];
        sort(a, a + n);
        for (int i = 0; i < n; i++)
        {
            while (!b.empty() && a[i] <= a[b.top()])
                b.pop();
            if (b.empty())
                l[i] = 0;
            else
                l[i] = b.top() + 1;
            b.push(i);
        }
        for (int i = n - 1; i >= 0; i--)
        {
            while (!c.empty() && a[i] <= a[c.top()])
                c.pop();
            if (c.empty())
                r[i] = n - 1;
            else
                r[i] = c.top() - 1;
            c.push(i);
        }
        for (int i = 0; i < n; i++)
        {
            int k = min(a[i], r[i] - l[i] + 1);
            s = max(s, k);
        }
        cout << s << endl;
    }
}
