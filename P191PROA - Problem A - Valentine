#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, k, s1 = 0, s2 = 0, s = 0;
	cin >> n >> k;
	int a[n + 1];
	for (int i = 1; i <= n; i++)
	{
		cin >> a[i];
		if (a[i] == 1)
			s1++;
		else
			s2++;
	}
	for (int i = 1; i <= n; i++)
	{
		int s3 = 0, s4 = 0;
		for (int j = -100; j <= 100; j++)
		{
			int h = i + j * k;
			if (h >= 1 && h <= n)
			{
				if (a[h] == 1)
					s3++;
				else
					s4++;
			}
		}
		int s5 = s1 - s3, s6 = s2 - s4;
		if (abs(s5 - s6) > s)
			s = abs(s5 - s6);
	}
	cout << s;
}
