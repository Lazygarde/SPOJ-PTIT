#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long n, k, s = 0, ss = 0;
	cin >> n >> k;
	long long a[n];
	for (int i = 0; i < n; i++)
	{
		cin >> a[i];
		if (a[i] < 0)
			ss++;
	}
	sort(a, a + n);
	if (ss > 0)
	{
		if (ss > k)
		{
			for (int i = 0; i < k; i++)
				a[i] *= -1;
		}
		else
		{
			for (int i = 0; i < ss; i++)
				a[i] *= -1;
			sort(a, a + n);
			k -= ss;
			if (k % 2 == 1)
				a[0] *= -1;
		}
	}
	else if (k % 2 == 1)
		a[0] *= -1;
	for (int i = 0; i < n; i++)
		s += a[i];
	cout << s;
}
