#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int n;
    cin >> n;
    int a[n];
    for (int i = 0; i < n; i++)
        cin >> a[i];
    int d1 = 0, d2 = 0, t1 = 0, t2 = 0, i = 0, j = n - 1;
    while (i <= j)
    {
        if (t1 <= t2)
        {
            d1++;
            t1 += a[i];
            i++;
        }
        else
        {
            d2++;
            t2 += a[j];
            j--;
        }
    }
    cout << d1 << " " << d2;
}
