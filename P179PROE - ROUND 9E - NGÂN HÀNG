#include <bits/stdc++.h>
using namespace std;
int main()
{
	long long n;
	double s = 0, s1 = 0, s2 = 0;
	cin >> n;
	double max1 = 0, max2 = 0;
	double a[n];
	for (int i = 0; i < n; i++)
	{
		cin >> a[i];
		s += a[i];
	}
	sort(a, a + n);
	for (int i = n - 1; i >= 0; i--)
	{
		s1 += a[i];
		if (s1 * 10000 / s - (n - i) * 10000 / n > s2)
		{
			s2 = s1 * 10000 / s - (n - i) * 10000 / n;
			max1 = s1 * 10000 / s;
			max2 = (n - i) * 10000 / n;
		}
	}
	printf("%.1lf %.1lf", max2 / 100, max1 / 100);
}
