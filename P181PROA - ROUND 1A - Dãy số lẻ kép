#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int n, x, ok = 0;
    cin >> n;
    for (int i = 0; i < n; i++)
    {
        cin >> x;
        if ((i == 0 || i == n - 1) && x % 2 == 1)
            ok++;
    }
    if (ok == 2 && n % 2 == 1)
        cout << "yes";
    else
        cout << "no";
}
