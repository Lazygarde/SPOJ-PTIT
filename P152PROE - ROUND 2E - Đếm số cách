#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int n;
    cin >> n;
    for (int i = 1; i <= n; i++)
    {
        int n1;
        cin >> n1;
        a[i] = a[i - 1] + n1;
    }
    long long ans = 0;
    if (a[n] % 3 == 0)
    {
        int d = 0;
        for (int i = n - 1; i > 0; i--)
        {
            if (a[i] == a[n] / 3)
                ans = ans + d;
            if (a[i] == a[n] / 3 * 2)
                d++;
        }
    }
    cout << ans << endl;
}
