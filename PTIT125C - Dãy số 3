#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, k, s = 0;
	cin >> n >> k;
	vector<int> b;
	pair<int, int> a[n + 1];
	for (int i = 1; i <= n; i++)
	{
		a[i].first = 0;
		a[i].second = 0;
	}
	for (int i = 0; i < k; i++)
	{
		int x, y;
		cin >> x >> y;
		a[x].first++;
		a[y].second++;
	}
	for (int i = 1; i <= n; i++)
	{
		s += a[i].first;
		b.push_back(s);
		s -= a[i].second;
	}
	sort(b.begin(), b.end());
	cout << b[b.size() / 2];
}
