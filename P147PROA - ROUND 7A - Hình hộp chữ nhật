#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    long long a, b, c, t, s;
    cin >> a >> b >> c;
    t = sqrt(a * b * c);
    s = 4 * (t / a + t / b + t / c);
    cout << s;
}
