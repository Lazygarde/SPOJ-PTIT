#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long a[2], fff = 0;
	cin >> a[0] >> a[1];
	vector<string> f;
	string ff = "";
	for (int i = 0; i < 2; i++)
	{
		string s = "";
		long long c = log(a[i]) / log(3);
		for (int j = c; j >= 0; j--)
		{
			long long d = pow(3, j);
			long long k = a[i] / d;
			char e = k + '0';
			s = s + e;
			a[i] %= d;
		}
		f.push_back(s);
	}
	if (f[1].size() > f[0].size())
		f[0].insert(f[0].begin(), f[1].size() - f[0].size(), '0');
	if (f[1].size() < f[0].size())
		f[1].insert(f[1].begin(), f[0].size() - f[1].size(), '0');
	for (int i = 0; i < f[0].size(); i++)
	{
		int k = f[1][i] - f[0][i];
		if (k < 0)
			k += 3;
		char h = k + '0';
		ff = ff + h;
	}
	int j = 0;
	for (int i = ff.size() - 1; i >= 0; i--)
	{
		int o = (ff[i] - '0');
		fff += o * pow(3, j);
		j++;
	}
	cout << fff;
}
