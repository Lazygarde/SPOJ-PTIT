#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int t;
	cin >> t;
	while (t--)
	{
		int n, k;
		string a;
		cin >> n >> k >> a;
		string b = "", c = "", d = "";
		for (int i = 0; i < k; i++)
		{
			if (i % 3 == 0)
			{
				b = b + 'B';
				c = c + 'V';
				d = d + 'H';
			}
			else if (i % 3 == 1)
			{
				b = b + 'V';
				c = c + 'H';
				d = d + 'B';
			}
			else
			{
				b = b + 'H';
				c = c + 'B';
				d = d + 'V';
			}
		}
		string s = a.substr(0, k);
		s = 'a' + s;
		s.erase(k, 1);
		int ss = 1e9;
		for (int i = 0; i < n - k + 1; i++)
		{
			s.push_back(a[i + k - 1]);
			s.erase(0, 1);
			int k1 = 0, k2 = 0, k3 = 0;
			for (int j = 0; j < k; j++)
			{
				if (s[j] != b[j])
					k1++;
				if (s[j] != c[j])
					k2++;
				if (s[j] != d[j])
					k3++;
			}
			if (min(k1, min(k2, k3)) < ss)
				ss = min(k1, min(k2, k3));
		}
		cout << ss << endl;
	}
}
