#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int n;
    cin >> n;
    n++;
    long long s = 0;
    vector<long long> a(n);
    for (int i = 0; i < n; i++)
    {
        cin >> a[i];
    }
    for (long long i = n - 1; i >= 1; i--)
    {
        if ((a[i] + s) % i != 0)
        {
            cout << "No";
            return 0;
        }
        else
            s = s + (a[i] + s) / i;
    }
    cout << "Yes";
}
