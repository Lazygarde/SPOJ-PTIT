#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n;
	cin >> n;
	vector<pair <int,int>> a;
	for (int i = 2; i <= sqrt(n); i++)
	{
		if (n % i == 0)
		{
			pair <int,int> d;
			d.second = 0;
			d.first = i;
			while (n % i == 0)
			{
				d.second++;
				n /= i;
			}
			a.push_back(d);
		}
	}
	if (n > 1)
	{
		pair <int,int> d;
		d.first = n;
		d.second = 1;
		a.push_back(d);
	}
	n = a.size();
	int s = 1, ss = 1;
	for (int i = 0; i < n; i++)
	{
		s *= a[i].first;
		if (a[i].second > ss)
			ss = a[i].second;
	}
	int k = log(ss) / log(2);
	if (pow(2, k) != ss)
		k++;
	ss = pow(2, k);
	for (int i = 0; i < n; i++)
	{
		if (a[i].second != ss)
		{
			k++;
			break;
		}
	}
	cout << s << " " << k;
}
