#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int t;
	cin >> t;
	while (t--)
	{
		long long n, k, s = 0, ss = 0;
		cin >> n >> k;
		for (int i = 1; ss <= n; i++)
		{
			if (ss + i * k <= n)
			{
				ss += i * k;
				s += k;
			}
			else
			{
				long long m = n - ss;
				s += m / i;
				break;
			}
		}
		cout << s << endl;
	}
}
