#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, m, ans = 1e9;
	cin >> n >> m;
	for (int i = 0; i <= n; i++)
	{
		int k = n - i * 2;
		if (k < 0)
			break;
		if ((k + i) % m == 0 && (k + i) < ans)
			ans = k + i;
	}
	if (ans == 1e9)
		cout << "-1";
	else
		cout << ans;
}
