#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long n, k;
	cin >> n >> k;
	if (n % 2 == 0)
	{
		if (k <= n / 2)
			cout << 2 * k - 1;
		else
			cout << 2 * k - n;
	}
	else
	{
		if (k <= n / 2 + 1)
			cout << 2 * k - 1;
		else
			cout << 2 * k - n - 1;
	}
}
