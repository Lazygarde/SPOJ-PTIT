#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
bool cmp(pair<int, int> a, pair<int, int> b)
{
    return a.second < b.second;
}
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int n, dd = 1;
    cin >> n;
    pair<int, int> a[n];
    for (int i = 0; i < n; i++)
        cin >> a[i].first >> a[i].second;
    sort(a, a + n, cmp);
    int x = a[0].second;
    for (int i = 1; i < n; i++)
    {
        if (a[i].first >= x)
        {
            x = a[i].second;
            dd++;
        }
    }
    cout << dd;
}
