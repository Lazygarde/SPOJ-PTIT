#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n;
	cin >> n;
	int a[n + 1], pos1, pos2;
	for (int i = 1; i <= n; i++)
	{
		cin >> a[i];
		if (a[i] == n)
			pos1 = i;
		if (a[i] == 1)
			pos2 = i;
	}
	if (pos1 > pos2)
		swap(pos1, pos2);
	if (n - pos1 > pos2 - 1)
		cout << n - pos1;
	else
		cout << pos2 - 1;
}
