#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int n, y = 1;
    cin >> n;
    int a[n + 1];
    for (int i = 1; i <= n; i++)
        cin >> a[i];
    for (int i = 1; i <= n / 2; i++)
    {
        int s = 0, pos;
        for (int j = i; j <= n; j++)
        {
            if (a[j] == i)
            {
                pos = j;
                break;
            }
        }
        for (int j = pos; j > i; j--)
        {
            swap(a[j], a[j - 1]);
            s++;
        }
        cout << s << endl;
        s = 0;
        for (int j = i; j <= n; j++)
        {
            if (a[j] == n - i + 1)
            {
                pos = j;
                break;
            }
        }
        for (int j = pos; j < n - i + 1; j++)
        {
            swap(a[j], a[j + 1]);
            s++;
        }
        cout << s << endl;
    }
    if (n % 2 == 1)
        cout << "0";
}
