#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long n, a, b, c;
	cin >> n >> a >> b >> c;
	if (a < b - c)
		cout << n / a;
	else
	{
		long long s = 0;
		while (n >= b)
		{
			long long k = n / b;
			s += k;
			n = n - k * b + c * k;
		}
		long long k = n / a;
		s += k;
		cout << s;
	}
}
