#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    string s;
    cin >> s;
    int n = s.size(), ans = 0, s1 = 0, s2 = 0;
    for (int i = 0; i < n; i++)
    {
        if (s[i] == '(')
            s1++;
        else
            s2++;
        if (s2 > s1)
        {
            ans++;
            s1++;
            s2--;
        }
    }
    ans += abs(s1 - s2) / 2;
    cout << ans;
}
