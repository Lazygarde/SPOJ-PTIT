#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
struct data
{
	long long b;
	long long c;
};
bool cmp(data a, data d)
{
	return a.c < d.c;
}
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long n, r, arg, s = 0, j = 0, ss = 0;
	cin >> n >> r >> arg;
	arg = arg * n;
	data a[n];
	for (long long i = 0; i < n; i++)
	{
		cin >> a[i].b >> a[i].c;
		s += a[i].b;
	}
	sort(a, a + n, cmp);
	while (s < arg)
	{
		long long k = r - a[j].b;
		if (s + k > arg)
			k = arg - s;
		s += k;
		ss += k * a[j].c;
		j++;
	}
	cout << ss;
}
