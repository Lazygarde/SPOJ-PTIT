#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int n, s;
    cin >> n >> s;
    int a[n];
    long long ans = 0;
    for (int i = 0; i < n; i++)
        cin >> a[i];
    sort(a, a + n);
    if (a[n / 2] > s)
    {
        for (int i = 0; i <= n / 2; i++)
            if (a[i] > s)
                ans += a[i] - s;
    }
    else if (a[n / 2] < s)
    {
        for (int i = n / 2; i < n; i++)
            if (s > a[i])
                ans += s - a[i];
    }
    cout << ans;
}
