#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, s = 0, pos = -1;
	cin >> n;
	int a[100005];
	for (int i = 1; i <= n; i++)
	{
		cin >> a[i];
		if (i > 1 && a[i] < a[i - 1])
		{
			s++;
			pos = i;
		}
	}
	if (s > 1)
		cout << "-1";
	else if (s == 0)
		cout << "0";
	else if (s == 1)
	{
		if (a[1] >= a[n])
			cout << (n - pos + 1);
		else
			cout << "-1";
	}
}
