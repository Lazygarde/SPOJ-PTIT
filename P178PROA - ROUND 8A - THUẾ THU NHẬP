#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	while (1)
	{
		int n;
		cin >> n;
		if (n == 0)
			break;
		if (n < 1e6)
			cout << n << endl;
		else if (n < 5e6)
			cout << n * 9 / 10 << endl;
		else
			cout << n * 4 / 5 << endl;
	}
}
