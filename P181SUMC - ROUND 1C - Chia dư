#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, ma = 0;
	cin >> n;
	int a[n], b[n];
	for (int i = 0; i < n; i++)
		cin >> a[i];
	for (int i = 0; i < n; i++)
		cin >> b[i];
	vector<int> c;
	for (int i = 0; i < n; i++)
	{
		int x = a[i] - b[i];
		if (x < 0)
		{
			cout << -1;
			return 0;
		}
		else if (x > 0)
			c.push_back(x);
		if (b[i] > ma)
			ma = b[i];
	}
	if (c.size() == 0)
		cout << ma + 1;
	else
	{
		int s = c[0];
		for (int i = 1; i < c.size(); i++)
		{
			s = __gcd(s, c[i]);
		}
		int k = s;
		for (int i = sqrt(k); i >= 1; i--)
		{
			if (k % i == 0)
			{
				int h = k / i;
				if (h > ma && s > h)
					s = k / i;
				if (i > ma && s > i)
					s = i;
			}
		}
		if (s > ma)
			cout << s;
		else
			cout << -1;
	}
}
