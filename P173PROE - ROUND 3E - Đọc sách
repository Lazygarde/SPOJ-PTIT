#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
struct b
{
	int pos;
	int s;
};
bool cmp(b e, b f)
{
	if (e.s == f.s)
	{
		return e.pos < f.pos;
	}
	return e.s > f.s;
}
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, k;
	cin >> n >> k;
	int a[n];
	b c[n];
	vector<int> d;
	for (int i = 0; i < n; i++)
	{
		cin >> a[i];
		c[i].pos = i + 1;
		c[i].s = a[i];
	}
	sort(c, c + n, cmp);
	cout << c[k - 1].s << endl;
	for (int i = 0; i < k; i++)
		d.push_back(c[i].pos);
	sort(d.begin(), d.end());
	for (int i = 0; i < d.size(); i++)
		cout << d[i] << " ";
}
