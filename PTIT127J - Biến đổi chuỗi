#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int n;
    string s;
    cin >> n >> s;
    s = " " + s;
    int fa[n + 1] = {}, fb[n + 1] = {};
    for (int i = 1; i <= n; i++)
    {
        if (s[i] == 'A')
        {
            fa[i] = fa[i - 1];
            fb[i] = min(fb[i - 1] + 1, fa[i - 1] + 1);
        }
        else
        {
            fb[i] = fb[i - 1];
            fa[i] = min(fa[i - 1] + 1, fb[i - 1] + 1);
        }
    }
    cout << min(fa[n], fb[n] + 1);
}
