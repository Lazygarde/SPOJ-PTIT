#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int n, m, d;
    cin >> n >> m >> d;
    n *= m;
    float a[n], s = 0;
    for (int i = 0; i < n; i++)
    {
        cin >> a[i];
        s += a[i];
    }
    sort(a, a + n);
    s /= n;
    int k = lower_bound(a, a + n, s) - a;
    if (abs(s - a[k]) > abs(s - a[k - 1]))
        k--;
    s = 0;
    for (int i = 0; i < n; i++)
    {
        if ((int)abs(a[i] - a[k]) % d != 0)
        {
            cout << -1;
            return 0;
        }
        s += abs(a[i] - a[k]) / d;
    }
    cout << (int)s;
}
