#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n;
	cin >> n;
	int mu = 1000000, md = 1000000, su = 0, sd = 0;
	for (int i = 1; i <= n; i++)
	{
		int a, b;
		cin >> a >> b;
		su += a;
		sd += b;
		if (a < mu)
			mu = a;
		if (b < md)
			md = b;
	}
	su += md;
	sd += mu;
	if (su < sd)
		cout << sd;
	else
		cout << su;
}
