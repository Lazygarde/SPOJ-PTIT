#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int t;
	cin >> t;
	while (t--)
	{
		string a;
		cin >> a;
		int i = 0, n = a.size(), s1 = 0, s2 = 0;
		for (i = 0; i < n; i++)
		{
			if (a[i] >= 'A' && a[i] <= 'Z')
				a[i] += 32;
		}
		i = 0;
		while (i < n)
		{
			if (a[i] == '(')
			{
				while (a[i] != ')')
				{
					if (a[i] >= 'a' && a[i] <= 'z')
					{
						while (1)
						{
							if (a[i] >= 'a' && a[i] <= 'z')
							{
							}
							else
								break;
							i++;
						}
						s2++;
					}
					else
						i++;
				}
			}
			else if (a[i] >= 'a' && a[i] <= 'z')
			{
				int j = 0;
				while (a[i] >= 'a' && a[i] <= 'z')
				{
					i++;
					j++;
					if (i == n)
						break;
				}
				if (j > s1)
					s1 = j;
			}
			else
				i++;
		}
		cout << s1 << " " << s2 << endl;
	}
}
