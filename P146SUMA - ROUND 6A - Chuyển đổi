#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int n, ans = 0, s = 0, s1, s2;
    cin >> n;
    int a[n];
    for (int i = 0; i < n; i++)
    {
        cin >> a[i];
        if (a[i] == 1)
            s++;
    }
    if (s == n)
        cout << n - 1;
    else
    {
        for (int i = 0; i < n; i++)
        {
            for (int j = i; j < n; j++)
            {
                s1 = 0;
                s2 = 0;
                for (int k = i; k <= j; k++)
                {
                    if (a[k] == 1)
                        s1++;
                    else
                        s2++;
                }
                if (s2 - s1 + s > ans)
                    ans = s2 - s1 + s;
            }
        }
        cout << ans;
    }
}
