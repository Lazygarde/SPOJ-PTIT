#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long s = 0;
	string a;
	cin >> a;
	for (int i = a.size() - 1; i >= 0; i--)
	{
		if ((a[i] - '0') % 4 == 0)
			s++;
		if (i > 0 && ((a[i - 1] - '0') * 10 + a[i] - '0') % 4 == 0)
			s += i;
	}
	cout << s;
}
