#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, k, pos1, pos2;
	cin >> n >> k;
	char a[n];
	for (int i = 0; i < n; i++)
		cin >> a[i];
	for (int i = 0; i < n; i++)
	{
		if (a[i] == 'G')
			pos1 = i;
		else if (a[i] == 'T')
			pos2 = i;
	}
	if (abs(pos1 - pos2) % k != 0)
		cout << "NO";
	else
	{
		if (pos1 < pos2)
		{
			for (int i = pos1 + k; i < pos2; i += k)
			{
				if (a[i] == '#')
				{
					cout << "NO";
					return 0;
				}
			}
			cout << "YES";
		}
		else
		{
			for (int i = pos1 - k; i > pos2; i -= k)
			{
				if (a[i] == '#')
				{
					cout << "NO";
					return 0;
				}
			}
			cout << "YES";
		}
	}
}
