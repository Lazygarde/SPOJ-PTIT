#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, ma = 0;
	cin >> n;
	int mi = n;
	if (n == 1)
		cout << "0 1";
	else if (n < 6)
		cout << "0 2";
	else
	{
		for (int i = 1; i <= 7; i++)
		{
			int m = n, s = 0;
			if (i > 1)
				s += 2;
			else if (i == 1)
				s += 1;
			m -= i;
			int k = m / 7;
			s += 2 * k;
			m = m % 7;
			if (m == 6)
				s++;
			if (s > ma)
				ma = s;
			if (s < mi)
				mi = s;
		}
		cout << mi << " " << ma;
	}
}
