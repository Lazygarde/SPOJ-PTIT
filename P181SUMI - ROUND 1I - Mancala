#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long a[14], ma = 0;
	for (int i = 0; i < 14; i++)
		cin >> a[i];
	for (int i = 0; i < 14; i++)
	{
		long long b[14], s = 0;
		for (int j = 0; j < 14; j++)
			b[j] = a[j];
		if (b[i] > 0)
		{
			long long n = b[i];
			b[i] = 0;
			for (int j = i + 1; j < 14; j++)
			{
				b[j]++;
				n--;
				if (n == 0)
					break;
			}
			if (n > 0)
			{
				long long k = n / 14;
				n %= 14;
				for (int j = 0; j < 14; j++)
					b[j] += k;
				for (int j = 0; j < n; j++)
					b[j]++;
			}
		}
		for (int j = 0; j < 14; j++)
			if (b[j] % 2 == 0)
				s += b[j];
		if (s > ma)
			ma = s;
	}
	cout << ma;
}
