#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
long long a[500010];
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int t;
    cin >> t;
    while (t--)
    {
        int n;
        cin >> n;
        n = n % 360;
        if (n == 0)
            cout << "0$\n";
        else
        {
            if (n == 180)
                cout << "$\n";
            else
            {
                int k = __gcd(n, 180);
                if (n / k == 1)
                    cout << "$/" << 180 / k << endl;
                else
                    cout << n / k << "$/" << 180 / k << endl;
            }
        }
    }
}
