#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int a, b, n;
	cin >> a >> b >> n;
	n = n % 6;
	if (n == 1)
		cout << a;
	else if (n == 2)
		cout << b;
	else if (n == 3)
		cout << b - a;
	else if (n == 4)
		cout << -a;
	else if (n == 5)
		cout << -b;
	else if (n == 0)
		cout << a - b;
}
