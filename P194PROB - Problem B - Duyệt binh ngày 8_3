#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n;
	cin >> n;
	int a[n], ma = 0, mi = 1000, pos1, pos2;
	for (int i = 0; i < n; i++)
		cin >> a[i];
	for (int i = 0; i < n; i++)
	{
		if (a[i] <= mi)
		{
			mi = a[i];
			pos1 = i;
		}
	}
	for (int i = n - 1; i >= 0; i--)
	{
		if (ma <= a[i])
		{
			ma = a[i];
			pos2 = i;
		}
	}
	if (ma == mi)
		cout << "0";
	else
	{
		if (pos1 < pos2)
			cout << n - pos1 - 2 + pos2;
		else
			cout << n - pos1 - 1 + pos2;
	}
}
