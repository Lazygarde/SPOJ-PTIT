#include <bits/stdc++.h>
using namespace std;
bool solve(string s)
{
    if (s == "")
        return 1;
    int l = s.size();
    if (l > 0 && s[l - 1] == '1')
        return solve(s.substr(0, l - 1));
    if (l > 1 && s[l - 2] == '1' && s[l - 1] == '4')
        return solve(s.substr(0, l - 2));
    if (l > 2 && s[l - 3] == '1' && s[l - 2] == '4' && s[l - 1] == '4')
        return solve(s.substr(0, l - 3));
    return 0;
}
int main()
{
    string s;
    cin >> s;
    if (solve(s))
        cout << "YES";
    else
        cout << "NO";
}
