#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, s = 0;
	cin >> n;
	char a[n];
	for (int i = 0; i < n; i++)
		cin >> a[i];
	for (int i = 2; i < n; i++)
	{
		if (a[i - 2] == '0' && a[i - 1] == '1' && a[i] == '0')
		{
			a[i] = '1';
			s++;
		}
	}
	cout << s;
}
