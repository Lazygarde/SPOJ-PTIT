#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long n, x, s = 0, mod = 1e9 + 7;
	priority_queue<long long, vector<long long>, greater<long long>> q;
	cin >> n;
	for (long long i = 0; i < n; i++)
	{
		cin >> x;
		x = x % mod;
		q.push(x);
	}
	while (1)
	{
		int a = q.top();
		q.pop();
		int b = q.top();
		q.pop();
		long long k = (a % mod + b % mod) % mod;
		q.push(k);
		s += (a % mod + b % mod) % mod;
		if (q.size() == 1)
			break;
	}
	s = s % mod;
	cout << s;
}
