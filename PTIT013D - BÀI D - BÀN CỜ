#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int t;
	cin >> t;
	while (t--)
	{
		long long n;
		cin >> n;
		if (n == 2)
			cout << "4\n";
		else if (n % 2 == 0)
			cout << n * n / 2 << endl;
		else
			cout << (n + 1) * (n + 1) / 4 + (n - 1) * (n - 1) / 4 << endl;
	}
}
