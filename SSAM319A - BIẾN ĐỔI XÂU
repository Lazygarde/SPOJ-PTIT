#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int t;
    cin >> t;
    while (t--)
    {
        string s;
        cin >> s;
        long long m = 0, ans = 0, MOD = 1e9 + 7;
        for (int i = s.size() - 1; i >= 0; i--)
        {
            if (s[i] == 'b')
                m++;
            if (s[i] == 'a')
            {
                ans += m;
                m *= 2;
            }
            ans %= MOD;
            m %= MOD;
        }
        cout << ans << endl;
    }
}
