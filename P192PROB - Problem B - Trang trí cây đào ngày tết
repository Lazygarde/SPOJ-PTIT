#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int a, b, c, s;
	cin >> a >> b >> c;
	for (int i = 0; i <= a; i++)
		for (int j = 0; j <= b; j++)
			for (int k = 0; k <= c; k++)
				if (j - i == 1 && k - j == 1 && i + j + k > s)
					s = i + j + k;
	cout << s;
}
