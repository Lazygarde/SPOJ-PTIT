#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int t;
    cin >> t;
    while (t--)
    {
        long long a, b, k;
        cin >> a >> b;
        for (int i = 1; i < 50; i++)
        {
            long long m = pow(2, i - 1);
            if (b % m != 0)
            {
                k = i - 1;
                break;
            }
        }
        cout << k << endl;
    }
}
