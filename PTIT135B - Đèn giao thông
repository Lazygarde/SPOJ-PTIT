#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
struct gt
{
    int pos;
    int d;
    int x;
};
bool cmp(gt a, gt b)
{
    return a.pos < b.pos;
}
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int n, l, s = 0;
    cin >> n >> l;
    gt a[n];
    for (int i = 0; i < n; i++)
        cin >> a[i].pos >> a[i].d >> a[i].x;
    sort(a, a + n, cmp);
    for (int i = 0; i < n; i++)
    {
        if (i > 0)
            s += a[i].pos - a[i - 1].pos;
        else
            s += a[i].pos;
        int k = s % (a[i].d + a[i].x);
        if (k < a[i].d)
            s += a[i].d - k;
    }
    s += l - a[n - 1].pos;
    cout << s;
}
