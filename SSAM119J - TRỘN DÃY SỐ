#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    long long a[201][201], mod = 1e9 + 7;
    for (int i = 0; i <= 200; i++)
    {
        for (int j = 0; j <= i; j++)
        {
            if (j == 0 || j == i)
                a[i][j] = 1;
            else
                a[i][j] = (a[i - 1][j] % mod + a[i - 1][j - 1] % mod) % mod;
        }
    }
    int t;
    cin >> t;
    while (t--)
    {
        int b, c;
        cin >> c >> b;
        cout << a[c + b][c] << endl;
    }
}
