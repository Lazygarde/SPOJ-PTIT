#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int t;
	cin >> t;
	while (t--)
	{
		int a, b;
		string s;
		cin >> a >> b >> s;
		cout << a << " ";
		for (int i = 0; i < s.size(); i++)
			for (int j = 0; j < b; j++)
				cout << s[i];
		cout << endl;
	}
}
