#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long n, k, a0, b0, a1, b1;
	cin >> n >> k >> a0 >> b0;
	long long a[2 * n][2];
	for (int i = 0; i < n; i++)
	{
		cin >> a[i][0] >> a[i][1];
		a[i + n][0] = a[i][0];
		a[i + n][1] = a[i][1];
	}
	k = k % (2 * n);
	if (k == 0)
	{
		cout << a0 << " " << b0;
		return 0;
	}
	for (int i = 0; i < k; i++)
	{
		a1 = 2 * a[i][0] - a0;
		b1 = 2 * a[i][1] - b0;
		a0 = a1;
		b0 = b1;
	}
	cout << a1 << " " << b1;
}
