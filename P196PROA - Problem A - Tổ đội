#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int n, k, pos, s = 0;
    cin >> n >> k;
    int a[n + 1];
    vector<int> b;
    for (int i = 0; i < n; i++)
        cin >> a[i];
    sort(a, a + n);
    a[n] = a[n - 1] + 6;
    for (int i = 0; i < n; i++)
    {
        pos = i;
        while (a[pos + 1] <= a[i] + 5 && pos < n)
            pos++;
        b.push_back(pos - i + 1);
        i = pos;
    }
    sort(b.begin(), b.end());
    pos = b.size() - 1;
    while (k > 0 && pos >= 0)
    {
        s += b[pos];
        k--;
        pos--;
    }
    cout << s;
}
