#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long n, s = 0, sm = -1e9;
	cin >> n;
	long long a[n];
	for (int i = 0; i < n; i++)
		cin >> a[i];
	for (int i = 0; i < n; i++)
	{
		s += a[i];
		if (s > sm)
			sm = s;
		if (s < 0)
			s = 0;
	}
	cout << sm << endl;
}
