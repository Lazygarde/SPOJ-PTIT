#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    string a;
    cin >> a;
    int l = 0, r = 0, lm = 0, rm = 0, s = 0;
    for (int i = 0; i < a.size(); i++)
    {
        if (a[i] == 'L')
        {
            l++;
            lm++;
            if (lm - r > s)
                s = lm - r;
        }
        else if (a[i] == 'R')
        {
            r++;
            rm++;
            if (rm - l > s)
                s = rm - l;
        }
        else
        {
            lm++;
            rm++;
            if (lm - r > s)
                s = lm - r;
            if (rm - l > s)
                s = rm - l;
        }
    }
    cout << s;
}
