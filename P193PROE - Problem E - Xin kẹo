#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, k;
	cin >> n >> k;
	long long a[n][2];
	long long s = 1, ss = 1;
	for (int i = 0; i < n; i++)
		cin >> a[i][0] >> a[i][1];
	for (int i = 0; i < n; i++)
	{
		if (a[i][0] == 1)
			s += a[i][1];
		else
			s *= a[i][1];
		s = s % 1000000007;
	}
	long long g = s - 1;
	for (int i = 0; i < n; i++)
	{
		if (a[i][0] == 2)
			ss *= a[i][1];
		ss = ss % 1000000007;
	}
	for (int i = 0; i < k; i++)
	{
		g *= ss;
		g = g % 1000000007;
		s += g;
		s = s % 1000000007;
	}
	cout << s % 1000000007;
}
