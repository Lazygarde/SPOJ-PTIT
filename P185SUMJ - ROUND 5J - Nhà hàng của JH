#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, a, b, s = 0, thieu = 0, thua = 0;
	cin >> n >> a >> b;
	int c[n];
	for (int i = 0; i < n; i++)
	{
		cin >> c[i];
		if (c[i] == 2)
			s++;
	}
	if (b < s)
		thieu += (s - b) * 2;
	else
		thua += (b - s) * 2;
	n -= s;
	thua += a;
	if (n > thua)
		cout << n - thua + thieu;
	else
		cout << thieu;
}
