#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, k;
	cin >> n >> k;
	string a;
	cin >> a;
	if (k == 0)
	{
		cout << a;
		return 0;
	}
	for (int i = 0; i < n - 1; i++)
	{
		if (a[i] == '4' && a[i + 1] == '7')
		{
			if (i % 2 == 1)
			{
				if (a[i - 1] == '4')
				{
					if (k % 2 == 0)
					{
						cout << a;
						return 0;
					}
					else
					{
						a[i] = '7';
						cout << a;
						return 0;
					}
				}
				else
				{
					a[i] = '7';
					k--;
				}
			}
			else
			{
				a[i + 1] = '4';
				k--;
				if (k == 0)
				{
					cout << a;
					return 0;
				}
			}
		}
	}
	cout << a;
}
