#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    while (1)
    {
        int n, s = 1;
        cin >> n;
        if (n == 0)
            break;
        while (n != 1)
        {
            if (n % 2 == 0)
                n /= 2;
            else
                n = n * 3 + 1;
            s++;
        }
        cout << s << endl;
    }
}
