#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int a[3];
	for (int i = 0; i < 3; i++)
		cin >> a[i];
	sort(a, a + 3);
	int s1 = a[2] - a[0], s2 = 2 * a[2] - a[0] - a[1], s3 = a[2] + a[1] - 2 * a[0];
	if (s1 < s2 && s1 < s3)
		cout << s1;
	else if (s2 < s1 && s2 < s3)
		cout << s2;
	else
		cout << s3;
}
