#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int t;
	cin >> t;
	while (t--)
	{
		long long a, b, n;
		cin >> a >> b >> n;
		long long h = a + n, k = b + n;
		if (a - k <= 0)
		{
			if ((h - b) <= 0)
				cout << 0 << endl;
			else if ((h - b) % 2 == 1)
				cout << (h - b + 1) / 2 << endl;
			else
				cout << (h - b) / 2 << endl;
		}
		else
			cout << n + 1 << endl;
	}
}
