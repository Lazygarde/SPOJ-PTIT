#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, k, s = 0, dem = 0;
	cin >> n >> k;
	int a[n];
	for (int i = 0; i < n; i++)
	{
		cin >> a[i];
		s += a[i];
	}
	while (1)
	{
		s += k;
		dem++;
		double x = dem + n;
		x = x * (k - 0.5);
		if (s >= x)
			break;
	}
	cout << dem;
}
