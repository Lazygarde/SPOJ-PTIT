#include <bits/stdc++.h>
using namespace std;
int main()
{
    long long n, k, ans = 0;
    cin >> n >> k;
    long long l = 1, r = n;
    while (l <= r)
    {
        long long mid = (l + r) / 2;
        long long cnt = mid * (mid + 1) / 2 - (n - mid);
        if (cnt == k)
        {
            ans = n - mid;
            break;
        }
        else if (cnt > k)
        {
            r = mid - 1;
        }
        else
        {
            l = mid + 1;
        }
    }
    cout << ans;
}
