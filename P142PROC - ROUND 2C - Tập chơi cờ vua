#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main(){
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int a,b,c,d;
	cin>>a>>b>>c>>d;
	if(a==c||b==d) cout<<"1 ";
	else cout<<"2 ";
	if(a-b==c-d||a+b==c+d) cout<<"1 ";
	else if((a+b)%2==(c+d)%2) cout<<"2 ";
	else cout<<"0 ";
	cout<<max(abs(a-c),abs(b-d));
}
