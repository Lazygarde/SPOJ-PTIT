#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
struct data
{
	long long e;
	long long f;
	long long g;
};
bool cmp(struct data a, struct data b)
{
	return a.g < b.g;
}
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long n, k, s = 0, ss = 0;
	cin >> n >> k;
	struct data a[n];
	for (int i = 0; i < n; i++)
	{
		cin >> a[i].e >> a[i].f;
		a[i].g = a[i].e + a[i].f;
	}
	sort(a, a + n, cmp);
	s = a[0].g;
	if (s > k)
	{
		cout << "0";
		return 0;
	}
	s -= a[0].e / 2;
	for (int i = 1; i < n; i++)
	{
		if (s > k)
			break;
		s += a[i - 1].e / 2 + a[i].g - a[i].e / 2;
		ss++;
	}
	cout << ss;
}
