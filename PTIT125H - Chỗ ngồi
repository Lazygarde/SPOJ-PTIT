#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, s = 0, i = 0;
	cin >> n;
	string a;
	cin >> a;
	while (i < n)
	{
		if (a[i] == 'L')
			i += 2;
		else
			i += 1;
		s++;
	}
	s++;
	if (n > s)
		cout << s;
	else
		cout << n;
}
