#include <bits/stdc++.h>
using namespace std;
int main(){
	int n,a=-1,b=-1;
	cin>>n;
	int k=n/4;
	for(int i=0;i<=k;i++){
		if((float)(n-4*i)/7==(n-4*i)/7){
			a=i;
			b=(n-4*a)/7;
			break;
		}
	}
	if(a==-1&&b==-1){
		cout<<"-1";
		return 0;
	}
	for(int i=0;i<a;i++) cout<<"4";
	for(int i=0;i<b;i++) cout<<"7";
}
