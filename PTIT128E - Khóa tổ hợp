#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    while (1)
    {
        int n, a, b, c;
        cin >> n >> a >> b >> c;
        if (n == 0 && a == 0 && b == 0 && c == 0)
            return 0;
        int s = 3 * n + n - 1;
        if (a < b)
            s += b - a;
        else
            s += n + b - a;
        if (b > c)
            s += b - c;
        else
            s += n + b - c;
        cout << s << endl;
    }
}
