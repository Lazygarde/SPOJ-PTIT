#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n;
	cin >> n;
	int a[n];
	for (int i = 0; i < n; i++)
		cin >> a[i];
	int dem1 = 0, dem2 = 0, t1 = 0, t2 = 0;
	int i = 0, j = n - 1;
	while (i <= j)
		if (t1 <= t2)
		{
			dem1++;
			t1 += a[i];
			i++;
		}
		else
		{
			dem2++;
			t2 += a[j];
			j--;
		}

	cout << dem1 << " " << dem2;
}
