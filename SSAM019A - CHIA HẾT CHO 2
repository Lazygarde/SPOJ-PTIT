#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int t;
    cin >> t;
    while (t--)
    {
        long long n;
        int s = 0;
        cin >> n;
        for (long long i = 1; i <= sqrt(n); i++)
        {
            if (n % i == 0)
            {
                if (i % 2 == 0)
                    s++;
                long long k = n / i;
                if (k % 2 == 0)
                    s++;
            }
        }
        if (sqrt(n) == (long long)sqrt(n))
        {
            long long k = sqrt(n);
            if (k % 2 == 0)
                s--;
        }
        cout << s << "\n";
    }
}
