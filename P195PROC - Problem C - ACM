#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	int n, j = 0;
	cin >> n;
	long long a[n], s = 0, ss = 0, pos = 0;
	for (int i = 0; i < n; i++)
		cin >> a[i];
	sort(a, a + n);
	while (s <= 300)
	{
		s += a[j];
		j++;
		pos++;
	}
	long long k = pos - 1;
	cout << pos - 1 << " ";
	for (int i = 0; i < pos; i++)
	{
		ss += k * a[i];
		k--;
	}
	cout << ss;
}
