#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	long long a, b, n;
	cin >> a >> b >> n;
	n = n % 6;
	if (n == 1)
		n = a;
	else if (n == 2)
		n = b;
	else if (n == 3)
		n = b - a;
	else if (n == 4)
		n = -a;
	else if (n == 5)
		n = -b;
	else if (n == 0)
		n = a - b;
	if (n < 0)
		n += 1e9 + 7;
	else
		n = n % (1000000007);
	cout << n;
}
